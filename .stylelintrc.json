{
  "extends": ["stylelint-config-standard"],
  "ignoreFiles": [
    "node_modules/**/*",
    "dist/**/*",
    "build/**/*"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "layer",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "at-rule-no-deprecated": null,
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "/^--/"
        ]
      }
    ]
  }
}